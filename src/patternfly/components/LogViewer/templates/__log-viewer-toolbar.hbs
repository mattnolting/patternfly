{{#> log-viewer-header __log-viewer-toolbar--IsMatch=log-viewer--IsMatch}}
  {{#> toolbar toolbar--id=(concat log-viewer--id '-toolbar') toolbar--attribute='role="toolbar"'}}
    {{#> toolbar-content}}
      {{#> toolbar-content-section toolbar-content-section--modifier="pf-m-nowrap"}}
        {{#> toolbar-item toolbar-item--modifier="pf-m-search-filter"}}
          {{> __log-viewer-toolbar-select}}
        {{/toolbar-item}}
        {{#> toolbar-group toolbar-group--modifier="pf-m-toggle-group pf-m-show-on-lg"}}
          {{> toolbar-toggle toolbar-toggle--icon="search"}}
          {{> __log-viewer-toolbar-search-filter __log-viewer-toolbar-search-filter--Width="268px"}}
        {{/toolbar-group}}
        {{#> toolbar-item toolbar-item--modifier="pf-m-gap-none"}}
          {{#> button button--modifier="pf-m-link"}}
            {{#> button-icon button-icon--modifier="pf-m-start"}}
              <i class="fas fa-pause" aria-hidden="true"></i>
            {{/button-icon}}
            Pause
          {{/button}}
        {{/toolbar-item}}
        {{#> toolbar-item toolbar-item--modifier="pf-m-align-end pf-m-hidden-on-lg pf-m-gap-none"}}
          {{> __log-viewer-menu-toggle}}
        {{/toolbar-item}}
        {{#> toolbar-group toolbar-group--modifier="pf-m-icon-button-group pf-m-align-end pf-m-hidden pf-m-visible-on-lg"}}
          {{#> toolbar-item}}
            {{#> button button--modifier="pf-m-link"}}
              Clear log
            {{/button}}
          {{/toolbar-item}}
          {{#> toolbar-item}}
            {{> menu-toggle menu-toggle--IsPlain=true menu-toggle--icon='cog' menu-toggle--id=(dasherize log-viewer--id 'menu-toggle')}}
            {{#if menu-toggle--IsExpanded}}
              {{#> menu menu-toggle--id=(dasherize log-viewer--id 'settings-menu-toggle')}}
                {{#> menu-content}}
                  {{#> menu-list check--id=(dasherize log-viewer--id 'check' menu-list-item--id)}}
                    {{#> menu-list-item menu-list-item--id="1"}}
                      {{#> menu-item}}
                        {{> check check--id=(dasherize log-viewer--id 'desktop-check-wrap-lines') check-label--text='Wrap lines'}}
                      {{/menu-item}}
                    {{/menu-list-item}}
                    {{#> menu-list-item menu-list-item--id="2"}}
                      {{#> menu-item}}
                        {{> check check--id=(dasherize log-viewer--id 'desktop-check-show-timestamps') check-label--text='Show timestamps'}}
                      {{/menu-item}}
                    {{/menu-list-item}}
                    {{#> menu-list-item menu-list-item--id="3"}}
                      {{#> menu-item}}
                        {{> check check--id=(dasherize log-viewer--id 'desktop-check-line-number') check-label--text='Display line numbers'}}
                      {{/menu-item}}
                    {{/menu-list-item}}
                  {{/menu-list}}
                {{/menu-content}}
              {{/menu}}
            {{/if}}
          {{/toolbar-item}}
          {{#> toolbar-item}}
            {{#> button button--modifier="pf-m-plain" button--attribute='aria-label="Open external link"'}}
              <i class="fas fa-external-link-alt" aria-hidden="true"></i>
            {{/button}}
          {{/toolbar-item}}
          {{#> toolbar-item}}
            {{#> button button--modifier="pf-m-plain" button--attribute='aria-label="Download"'}}
              <i class="fas fa-download" aria-hidden="true"></i>
            {{/button}}
          {{/toolbar-item}}
          {{#> toolbar-item}}
            {{#> button button--modifier="pf-m-plain" button--attribute='aria-label="Full screen"'}}
              <i class="fas fa-expand" aria-hidden="true"></i>
            {{/button}}
          {{/toolbar-item}}
        {{/toolbar-group}}
      {{/toolbar-content-section}}
      {{#> toolbar-expandable-content}}
        {{> __log-viewer-toolbar-search-filter __log-viewer-toolbar-search-filter--Width="24ch"}}
      {{/toolbar-expandable-content}}
    {{/toolbar-content}}
  {{/toolbar}}
{{/log-viewer-header}}
