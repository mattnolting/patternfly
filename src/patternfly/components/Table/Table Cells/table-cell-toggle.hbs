{{#if table-cell--IsToggle}}
  {{#> button
      button--aria-label='Toggle row'
      button--IsSmall=table--IsCompact
      button--IsPlain=true
      button--IsExpanded=table-tr--IsExpanded
      button--IsAriaExpanded=table-tr--IsExpanded
      button--id=(dasherize table--id 'toggle' table-tr--index)
    }}
    {{> table-toggle-icon}}
  {{/button}}
{{/if}}
