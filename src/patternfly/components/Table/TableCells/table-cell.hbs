<{{table-cell--tag}} class="{{table-cell--root}}{{table-cell--tag}}{{table-cell--modifiers}}"
  role='cell'
  {{#if table-cell--attribute}}
    {{{table-cell--attribute}}}
  {{/if}}>

  {{#if @partial-block}}
    {{> @partial-block}}
  {{/if}}
</{{table-cell--tag}}>

{{/config}}
