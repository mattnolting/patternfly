{{#if table-tr--IsExpanded}}
    {{#> table-td table-tr--IsExpanded=true table-td--table--IsGrid=true table-td--button--attribute=(concat 'id="' table--id '-expandable-toggle-' table-tr--index '" aria-label="Collapse all" ')}}{{/table-td}}
{{else}}
    {{#> table-td table-td--table--IsGrid=true table-td--button--attribute=(concat 'id="' table--id '-expandable-toggle-' table-tr--index '" aria-label="Expand all" ')}}{{/table-td}}
{{/if}}