{{#if table-tr--expanded}}
    {{> table-td table-tr--expanded="true" table-td--IsToggle=true table-td--button--attribute=(concat 'id="' table--id '-expandable-toggle-' table-tr--index '" aria-label="Collapse all" ')}}
{{else}}
    {{> table-td table-td--IsToggle=true table-td--button--attribute=(concat 'id="' table--id '-expandable-toggle-' table-tr--index '" aria-label="Expand all" ')}}
{{/if}}
