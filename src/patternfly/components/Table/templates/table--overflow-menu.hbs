{{#> overflow-menu overflow-menu--id=(dasherize table--id table-tr--index 'overflow') table-td--UsesOverflowMenu=true overflow-menu--UsesMenuToggle=true}}
  {{#if overflow-menu--IsControl}}
    {{#> overflow-menu-control overflow-menu-button--aria-label="Table actions"}}
      {{> menu-toggle menu-toggle--IsExpanded=menu--IsExpanded menu-toggle--IsPlain=true menu-toggle--HasKebab=true menu-toggle--aria-label='Actions'}}
      {{#> menu}}
        {{#> menu-content}}
          {{#> menu-list}}
            {{> menu-list-item menu-list-item--text='Start'}}
            {{> menu-list-item menu-list-item--text='Stop'}}
          {{/menu-list}}
        {{/menu-content}}
      {{/menu}}
    {{/overflow-menu-control}}

  {{else}}

    {{#> overflow-menu-content}}
      {{#> overflow-menu-group overflow-menu-group--modifier="pf-m-button-group"}}
        {{#> overflow-menu-item}}
          {{#> button button--IsPrimary=true}}
            Start
          {{/button}}
        {{/overflow-menu-item}}
        {{#> overflow-menu-item}}
          {{#> button button--IsSecondary=true}}
            Stop
          {{/button}}
        {{/overflow-menu-item}}
      {{/overflow-menu-group}}
    {{/overflow-menu-content}}

  {{/if}}
{{/overflow-menu}}
