{{setTag menu-toggle-button--IsButton 'button' 'div'}}

<{{tag}} class="{{pfv}}menu-toggle__button
  {{#if menu-toggle-button--IsAction}}
    pf-m-action
  {{/if}}
  {{#if menu-toggle-button--modifier}}
    {{menu-toggle-button--modifier}}
  {{/if}}"
  {{#if menu-toggle-button--attribute}}
    {{{menu-toggle-button--attribute}}}
  {{/if}}>
  {{#if menu-toggle--IsToggle}}
    {{> menu-toggle-toggle--icon}}
  {{else if menu-toggle-button--text}}
    {{menu-toggle-button--text}}
  {{else if @partial-block}}
    {{> @partial-block}}
  {{/if}}
</{{tag}}>
