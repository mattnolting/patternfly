<input class="{{pfv}}check__input{{#if check-input--modifier}} {{check-input--modifier}}{{/if}}"
  type="checkbox"
  {{#ifAny check-description--text check--HasDescription check-body--text check--HasBodyText}}
    aria-describedby="
    {{#ifAny check-description--text check--HasDescription}}
      {{check--id}}-description
    {{/ifAny}}
    {{#ifAny check-body--text check--HasBodyText}}
      {{check--id}}-body
    {{/ifAny}}"
  {{/ifAny}}
  {{#if check--id}}
    id="{{check--id}}-input"
    name="{{check--id}}-input"
  {{/if}}
  {{#if check--IsStandalone}}
    aria-label="{{#if check--standalone--label}}{{check--standalone--label}}{{else}}Standalone check{{/if}}"
  {{/if}}
  {{#if check-input--IsChecked}}
    checked
  {{/if}}
  {{#if check-input--IsDisabled}}
    disabled
  {{/if}}
  {{#if check-input--attribute}}
    {{{check-input--attribute}}}
  {{/if}}>
